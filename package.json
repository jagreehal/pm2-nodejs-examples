{
  "name": "pm2-nodejs-examples",
  "version": "1.0.0",
  "description": "This repository contains examples of using PM2 to run (and crash) Node.js apps",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev  --inspect --no-notify --transpile-only --respawn -- src/index.ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint": "eslint --ext .js,.ts .",
    "start": "node dist/index.js"
  },
  "keywords": [
    "nodejs",
    "pm2",
    "docker"
  ],
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-pino-logger": "^7.0.0",
    "pino": "^8.8.0",
    "pino-http": "^8.3.1",
    "pino-pretty": "^9.1.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/express": "4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "autocannon": "^7.10.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
